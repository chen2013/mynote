<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flyinmenu="http://schemas.android.com/apk/res/edu.sdust.mynote"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <edu.sdust.mynote.menu.FlyInMenu
        android:id="@+id/leftPanel2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/navigation_list_background"
        flyinmenu:content="@+id/rightcontent"
        flyinmenu:menu="@+id/menu" >

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:background="@drawable/navigation_top_bar_background" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:text="用户登录"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:id="@+id/loginlabel"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/navigation_top_bar_add" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/navigation_top_bar_edit" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/navigation_top_bar_setting" />
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#ff555555"
                android:background="@color/transparent"
                android:dividerHeight="1.0px"
                 >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

		        <RelativeLayout
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="50dip"
			    android:background="@drawable/title_bar_bg">
			    <Button
				    android:id="@+id/main_option_btn"
					android:layout_width="40dip"
					android:layout_height="40dip"
					android:background="@drawable/option"
					android:layout_marginLeft="5dip"
					android:layout_centerVertical="true">
				</Button>
			    <TextView
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:text="@string/main_tilte"
				    android:layout_centerInParent="true"
				    android:textColor="#33333333"
				    android:textSize="18dip"
				    android:layout_centerVertical="true"
				    />
				<Button
				    android:id="@+id/main_setting_btn"
					android:layout_width="23dip"
					android:layout_height="23dip"
					android:background="@drawable/setting_bg"
					android:layout_centerVertical="true"
					android:layout_marginRight="10dip"
					android:layout_alignParentRight="true">
			    </Button>
		    </RelativeLayout>
        </LinearLayout>
    </edu.sdust.mynote.menu.FlyInMenu>

</RelativeLayout>