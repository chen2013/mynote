<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_bg"
    >
    <RelativeLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="47dip"
	    android:background="@drawable/nav_bg">
	    <Button
		    android:id="@+id/register_back_btn"
			android:layout_width="40dip"
			android:layout_height="24dip"
			android:background="@drawable/back_bg"
			android:layout_marginLeft="5dip"
			android:layout_centerVertical="true"
			android:text="@string/back">
	    </Button>
	    <TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:text="账户申请"
		    android:layout_centerInParent="true"
		    android:textColor="#33333333"
		    android:textSize="18dip"
		    android:layout_centerVertical="true"
		    />
	    <Button
		    android:id="@+id/register_commit_btn"
			android:layout_width="40dip"
			android:layout_height="24dip"
			android:background="@drawable/commit_bg"
			android:layout_marginRight="5dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="@string/registercommit">
		</Button>
    </RelativeLayout>
    <LinearLayout
    	android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <!-- 第一个白框BEGIN -->
     	 	<LinearLayout 
			android:gravity="center_vertical" 
			android:orientation="vertical" 
			android:background="@drawable/shape_bg" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="10.0dip" 
			android:layout_marginTop="25.0dip" 
			android:layout_marginRight="10.0dip">
			
				<LinearLayout 
				android:gravity="center_vertical" 
				android:orientation="horizontal" 
				android:padding="10.0dip" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:minHeight="60.0dip">
				
					<ImageView 
					android:layout_gravity="top" 
					android:paddingTop="4.0dip"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:src="@drawable/dingshangqu" />
					
	                    <LinearLayout 
	                     android:orientation="vertical"
	                     android:layout_width="fill_parent" 
	                     android:layout_height="wrap_content" 
	                     android:layout_marginLeft="10.0dip">
	                     
	                        <TextView android:textSize="18.0sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="新用户申请" />
	                        <TextView android:textSize="14.0sp" android:textColor="#ff545454" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="" android:layout_marginTop="4.0dip" />
	                        <TextView android:textSize="14.0sp" android:textColor="#ff545454" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="注册账户，同步您的日程，是您的生活安排更加方便" />
	                        
	                    </LinearLayout>
	                    
	           </LinearLayout>
	           
	           <View 
	           android:background="@drawable/shape_line" 
	           android:layout_width="fill_parent" 
	           android:layout_height="1.0px" />
	           
               <LinearLayout 
               android:gravity="center_vertical" 
               android:orientation="horizontal" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content" 
               android:padding="10.0dip" 
               android:minHeight="50.0dip">
               
                    <TextView android:textSize="18.0sp" android:textColor="@android:color/black" android:paddingLeft="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="用户名" />
                    
                    <EditText 
                    android:id = "@+id/register_username"
                    android:textSize="16.0sp" 
                    android:textColor="#ff545454" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginRight="10.0dip" 
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"                
                    android:hint="您的用户名"                
                    android:maxLines="1"
                    android:editable="true"
      				android:background="@android:color/white"
      				android:layout_weight="1.0"/>
            
                        
                    
               </LinearLayout>
               
               
               
			   <LinearLayout 
               android:gravity="center_vertical" 
               android:orientation="horizontal" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content" 
               android:padding="10.0dip" 
               android:minHeight="50.0dip">
               
                    <TextView android:textSize="18.0sp" android:textColor="@android:color/black" android:paddingLeft="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="密    码" />
                    
                    <EditText 
                    android:inputType="textPassword"
                    android:id = "@+id/register_userpassword"
                    android:textSize="16.0sp" 
                    android:textColor="#ff545454" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginRight="10.0dip" 
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"                
                    android:hint="您要设置的密码"                
                    android:maxLines="1"
                    android:maxLength="16"
                    android:editable="true"
      				android:background="@android:color/white"
      				android:layout_weight="1.0"/>
            
          
               </LinearLayout>
	           
	           <LinearLayout 
               android:gravity="center_vertical" 
               android:orientation="horizontal" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content" 
               android:padding="10.0dip" 
               android:minHeight="50.0dip">
               
                    <TextView android:textSize="18.0sp" android:textColor="@android:color/black" android:paddingLeft="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确    认" />
                    
                    <EditText
                    android:inputType="textPassword" 
                    android:id = "@+id/register_userpassword_again"
                    android:textSize="16.0sp" 
                    android:textColor="#ff545454" 
                    android:layout_marginLeft="10.0dip" 
                    android:layout_marginRight="10.0dip" 
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"                
                    android:hint="再次输入密码"                
                    android:maxLines="1"
                    android:maxLength="16"
                    android:editable="true"
      				android:background="@android:color/white"
      				android:layout_weight="1.0"/>
            

                    
               </LinearLayout>
	           
	           
	           
	        </LinearLayout>
	        <!-- 第一个白框end -->
	</LinearLayout>
</LinearLayout>
